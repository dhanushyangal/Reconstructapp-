<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Theme"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/postit_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post-it Theme"/>

    <Button
        android:id="@+id/premium_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premium Theme"/>

    <Button
        android:id="@+id/watercolor_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watercolor Theme"/>

    <Button
        android:id="@+id/floral_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Floral Theme"/>
</LinearLayout> 