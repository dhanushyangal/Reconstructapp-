<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/watercolor_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watercolor Theme" />

    <Button
        android:id="@+id/patterns_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patterns Theme" />

    <Button
        android:id="@+id/floral_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Floral Theme" />

    <Button
        android:id="@+id/japanese_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Japanese Theme" />
</LinearLayout> 